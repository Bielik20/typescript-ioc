{
  "name": "typescript-ioc",
  "version": "1.0.0",
  "description": "A Lightweight dependency injection container for typescript and javascript.",
  "author": "Damian Bielecki <bielik20@gmail.com>",
  "keywords": [
    "ioc",
    "di",
    "cdi",
    "javascript",
    "typescript",
    "node",
    "dependency injection",
    "dependency inversion",
    "inversion of control container"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Bielik20/typescript-ioc.git"
  },
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "main": "./dist/commonjs/index.js",
  "module": "./dist/module/index.js",
  "typings": "./dist/types/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "build": "npm run clean && npm run tsc",
    "watch": "npm run tsc:module -- -w",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "prettier": "prettier --write '**/*.{ts,js,json,css,scss,html}'",
    "format": "npm run prettier && npm run lint:fix",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "tsc": "npm run tsc:module && npm run tsc:commonjs",
    "tsc:module": "tsc --project tsconfig.module.json",
    "tsc:commonjs": "tsc"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.10",
    "require-glob": "^3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^8.10.19",
    "cross-env": "^5.2.0",
    "husky": "^3.0.5",
    "istanbul": "^0.4.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-jest": "^24.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
