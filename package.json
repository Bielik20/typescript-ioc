{
  "name": "typescript-ioc",
  "version": "1.2.5",
  "description": "A Lightweight annotation-based dependency injection container for typescript.",
  "author": "Thiago da Rosa de Bustamante <trbustamante@gmail.com>",
  "keywords": [
    "ioc",
    "di",
    "cdi",
    "javascript",
    "typescript",
    "node",
    "dependency injection",
    "dependency inversion",
    "inversion of control container"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobustamante/typescript-ioc.git"
  },
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "main": "./dist/commonjs/index.js",
  "module": "./dist/module/index.js",
  "typings": "./dist/types/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "build": "npm run clean && npm run tsc",
    "watch": "npm run tsc:module -- -w",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "prettier": "prettier --write '**/*.{ts,js,json,css,scss,html}'",
    "format": "npm run prettier && npm run lint:fix",
    "test:new": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "pretest": "cross-env NODE_ENV=test npm build && npm run lint",
    "test": "npm run test:es5 && npm run test:es6",
    "test:es5": "cross-env NODE_ENV=test mocha",
    "test:es6": "cross-env NODE_ENV=test mocha --opts ./test/mocha-es6.opts",
    "test:coverage": "nyc npm run test:es6",
    "tsc": "npm run tsc:module && npm run tsc:commonjs",
    "tsc:module": "tsc --project tsconfig.module.json",
    "tsc:commonjs": "tsc"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.10",
    "require-glob": "^3.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/jest": "^24.0.18",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.10.19",
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "husky": "^3.0.5",
    "istanbul": "^0.4.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-jest": "^24.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "report-dir": "./reports/coverage",
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
