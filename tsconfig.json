{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "es2015",
        "types": ["reflect-metadata"],
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "es5"
    },
    "include": [
        "src"
    ]
}
